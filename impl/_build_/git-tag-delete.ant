<project default="git" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<property name="tag" value="barchart-archon-2.0.0" />

	<target name="git">
		<exec executable="git">
			<arg value="tag" />
			<arg value="-d" />
			<arg value="${tag}" />
		</exec>
		<exec executable="git">
			<arg value="push" />
			<arg value="origin" />
			<arg value=":refs/tags/${tag}" />
		</exec>
	</target>

</project>
