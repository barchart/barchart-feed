<project default="git" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<input message="CREATE TAG:" addproperty="tag" />

	<target name="git">
		<exec executable="git">
			<arg value="tag" />
			<arg value="-a" />
			<arg value="${tag}" />
			<arg value="-m" />
			<arg value="mannual tagging" />
		</exec>
		<exec executable="git">
			<arg value="push" />
			<arg value="origin" />
			<arg value="tag" />
			<arg value="${tag}" />
		</exec>
	</target>

</project>
